<% if flash[:not_authorized] %>
	<p id="notice">
		<h3><%= flash[:not_authorized] %></h3>
	</p>
<% else %>
	<p id="notice"><%= notice %></p>
	
	<p>
	  <b>Email:</b>
	  <%= @user.email %>
	</p>
	
	<p>
	  <b>Firstname:</b>
	  <%= @user.firstname %>
	</p>
	
	<p>
	  <b>Lastname:</b>
	  <%= @user.lastname %>
	</p>
	
	<p>
	  <b>DOB:</b>
	  <%= @user.dob %>
	</p>
	
	<p>
	  <b>Height:</b>
	  <%= @user.height %>
	</p>
	
	<p>
	  <b>Weight:</b>
	  <%= @user.weight %>
	</p>	
	
	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>
<% end %>
